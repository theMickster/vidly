@model Vidly.DataServices.Models.Movie

<div class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Movie Details</h4>
            </div>
            <div class="modal-body">
            @using (@Html.BeginForm("Index", "Movies"))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.MovieName)
                    @Html.TextBoxFor(m => m.MovieName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.MovieDetail.ImdbUrl)
                    @Html.TextBoxFor(m => m.MovieDetail.ImdbUrl)
                </div>

            }
                <div class="modal-footer">
                    <button type="button" id="btnSave" class="btn btn-primary">Save</button>
                    <button type="button" id="btnCancel" class="btn btn-default" data-dismiss="modal">Close</button>

                </div>
            </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#btnSave').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>