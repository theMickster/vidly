@model Vidly.Web.ViewModels.MovieEditViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Movie</h2>

@using (@Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieName)
        @Html.TextBoxFor( m=> m.Movie.MovieName, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.MovieGenreCodes, "Id", "Genre", ""), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieRatingCodeId)
        @Html.DropDownListFor(m => m.Movie.MovieRatingCodeId, new SelectList(Model.MovieRatingCodes, "Id", "Rating", ""), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Runtime)
        @Html.TextBoxFor(m => m.Movie.Runtime, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieDescription)
        @Html.TextAreaFor(m => m.Movie.MovieDescription, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MoviePlotSummary)
        @Html.TextAreaFor(m => m.Movie.MoviePlotSummary, new { @class = "form-control" })
    </div>
    <div class="btn-group-sm" role="group">
        <button id="btnSave" type="submit" class="btn btn-primary">Save</button>
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}